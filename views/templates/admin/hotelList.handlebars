<div class="card">
    <div class="card-header">
        <h2>Hotel List</h2>
    </div>
    <div class="card-body">
        {{#if error_message}}
        <div class="alert alert-danger" role="alert">
            {{error_message}}
        </div>
        {{/if}}
        {{#if success_message}}
        <div class="alert alert-success" role="alert">
            {{success_message}}
        </div>
        {{/if}}
        <div class="table-responsive">
            <table class="table table-borderd">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Price Range</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>

                </thead>
                <tbody>
                    {{#each hotels}}
                    <tr>
                        <td>{{this.name}}</td>
                        <td>{{this.category}}</td>
                        <td>{{this.priceRange}}</td>
                        <td><span class="badge badge-{{this.statusClass}} "> {{this.Status}}</span>
                        </td>
                        <td>
                           
                            <a href="/admin/hotel/{{this._id}}" class="btn btn-outline-primary" title="click to view hotel"><span
                                    class="fa fa-eye"></span></a>
                    </tr>
                    {{else}}
                    <tr>
                        <td colspan="8">
                            <p class="text-center">Hotels not found</p>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>