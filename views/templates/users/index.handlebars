<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="/public/Images/1.jpg" alt="First slide" />
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="/public/Images/2.jpg" alt="Second slide" />
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="/public/Images/3.jpg" alt="Third slide" />
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="/public/Images/4.jpg" alt="forth slide" />
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="/public/Images/5.jpg" alt="fifth slide" />
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<section class="jumbotron">
  <div class="container">
    <h1 class="display-3">Travelers' Choice Best of the Best!</h1>
    <p>MyTripAdvisor, It is the unique concept, which is recomments luxurious and exclusive Hotels at affordable price.
       Travelers across the globe use the MyTripadvisor site to discover where to stay. The Travel turn to get review all types of Hotels across the city.
    </p>
  </div>
</section>
<div class="container">

  <div class="row hotel-list">
    {{#each hotels}}

    <div class="col-md-4">
      <div class="card">
        <a href="/hotels/{{this._id}}">
          <img class="card-img-top" src="/public/uploads/{{this.image}}" alt="{{this.name}}" />
        </a>
        <div class="card-body">

          <h3 class="card-title"><a href="/hotels/{{this._id}}" class="text-decoration-none"> {{this.name}} </a></h3>
          <p>{{this.address}},{{this.city}},{{this.state}},{{this.zipCode}} </p>
          <p class="category">{{this.category}}</p>
          {{#if this.showRating}}
          <span class="badge-pill  badge-{{this.ratingclass}}"><i class="fa fa-star"></i> {{this.rating}}</span>
          {{/if}}
          <p>
            {{#each this.onSiteServices}}
            <span class="badge-pill  badge-secondary ml-1">{{this}}</span>
            {{/each}}
          </p>
          <p><strong>{{this.priceRange}}</strong></p>
        </div>

      </div>
    </div>
    {{/each}}
  </div>
</div>
