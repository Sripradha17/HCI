<div class="container login-form col-3 text-center">
    <h1 class="h3 mb-3 fw-normal">Log in</h1>
    <form id="login-form" method="post" action="javascript:;">
        <div class="form-group">
            <label class="sr-only" for="username">Username</label>
            <input class="form-control rounded-0" type="text" id="username" name="username" placeholder="Username">

        </div>
        <div class="form-group">
            <label class="sr-only" for="password">Password</label>
            <input class="form-control mb-4 rounded-0" type="password" id="password" name="password"
                placeholder="Password">

        </div>
        <button type="submit" name="submitButton" autocomplete="on" id="submitButton" class="btn btn-primary w-100">Log-in</button>
    </form>
    <a href="/Signup">Need to register? Click here to sign-up</a>
</div>